# HealthFlow Unified System - Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env files with real secrets to git

# =============================================================================
# GENERAL ENVIRONMENT
# =============================================================================
NODE_ENV=production
FLASK_ENV=production
LOG_LEVEL=info

# =============================================================================
# POSTGRESQL DATABASE (REQUIRED)
# =============================================================================
# Generate secure password: openssl rand -base64 32
POSTGRES_PASSWORD=CHANGE_ME_GENERATE_SECURE_PASSWORD
DATABASE_URL=postgresql://healthflow:${POSTGRES_PASSWORD}@postgres:5432/healthflow

# =============================================================================
# SECURITY & JWT (REQUIRED)
# =============================================================================
# Generate secure keys: openssl rand -hex 32
JWT_SECRET_KEY=CHANGE_ME_GENERATE_SECURE_KEY
SECRET_KEY=CHANGE_ME_GENERATE_SECURE_KEY

# JWT Token Expiration (in seconds)
JWT_ACCESS_TOKEN_EXPIRES=900
JWT_REFRESH_TOKEN_EXPIRES=604800

# =============================================================================
# SERVICE URLS (Docker Compose - DO NOT CHANGE unless using custom setup)
# =============================================================================
API_GATEWAY_URL=http://api-gateway:8000
AUTH_SERVICE_URL=http://auth-service:4003
AI_VALIDATION_SERVICE_URL=http://ai-validation-service:5000
PHARMACY_SERVICE_URL=http://pharmacy-service:4001
PRESCRIPTION_SERVICE_URL=http://prescription-service:4002
MEDICINE_SERVICE_URL=http://medicine-service:4004
REGULATORY_SERVICE_URL=http://regulatory-service:4005
PATIENT_SERVICE_URL=http://patient-service:4006
DOCTOR_SERVICE_URL=http://doctor-service:4007
APPOINTMENT_SERVICE_URL=http://appointment-service:4008
NOTIFICATION_SERVICE_URL=http://notification-service:4009

# =============================================================================
# CORS CONFIGURATION (REQUIRED - Update with your actual domains)
# =============================================================================
ALLOWED_ORIGINS=https://healthflow.gov.eg,https://api.healthflow.gov.eg

# =============================================================================
# REDIS CONFIGURATION (Docker Compose - DO NOT CHANGE unless using custom setup)
# =============================================================================
REDIS_URL=redis://redis:6379/0

# =============================================================================
# EMAIL SERVICE (OPTIONAL - for Notification Service)
# =============================================================================
SMTP_HOST=
SMTP_PORT=
SMTP_USER=
SMTP_PASS=
SMTP_FROM=

# =============================================================================
# SMS SERVICE (OPTIONAL - for Notification Service)
# =============================================================================
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# =============================================================================
# PAYMENT GATEWAYS (OPTIONAL - for Payment Service)
# =============================================================================
STRIPE_SECRET_KEY=
PAYPAL_CLIENT_ID=
PAYPAL_CLIENT_SECRET=

# =============================================================================
# SEARCH SERVICE (OPTIONAL)
# =============================================================================
ELASTICSEARCH_URL=

# =============================================================================
# MONITORING & ERROR TRACKING (RECOMMENDED)
# =============================================================================
SENTRY_DSN=

# =============================================================================
# AI SERVICES (OPTIONAL - for AI Validation Service)
# =============================================================================
OPENAI_API_KEY=

