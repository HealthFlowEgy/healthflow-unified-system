# HealthFlow Unified System - Environment Configuration

# ============================================
# GENERAL
# ============================================
NODE_ENV=development
FLASK_ENV=development

# ============================================
# SECURITY
# ============================================
JWT_SECRET_KEY=your-secret-key-here-change-in-production-use-openssl-rand-base64-32
SECRET_KEY=your-flask-secret-key-here-change-in-production

# ============================================
# DATABASE
# ============================================
POSTGRES_DB=healthflow
POSTGRES_USER=healthflow
POSTGRES_PASSWORD=healthflow_password_change_in_prod
DATABASE_URL=postgresql://healthflow:healthflow_password_change_in_prod@postgres:5432/healthflow

# ============================================
# REDIS
# ============================================
REDIS_URL=redis://redis:6379/0

# ============================================
# SERVICE PORTS
# ============================================
API_GATEWAY_PORT=8000
AUTH_SERVICE_PORT=4003
AI_VALIDATION_SERVICE_PORT=5000
PHARMACY_SERVICE_PORT=4001

# ============================================
# SERVICE URLS (Internal)
# ============================================
AUTH_SERVICE_URL=http://auth-service:4003
AI_VALIDATION_SERVICE_URL=http://ai-validation-service:5000
PHARMACY_SERVICE_URL=http://pharmacy-service:4001

# ============================================
# FRONTEND URLS
# ============================================
AI_VALIDATION_PORTAL_URL=http://localhost:3001
PHARMACY_PORTAL_URL=http://localhost:3002
REGULATORY_PORTAL_URL=http://localhost:3004

# ============================================
# CORS
# ============================================
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002,http://localhost:3004,http://localhost:8000

# ============================================
# JWT CONFIGURATION
# ============================================
JWT_ACCESS_TOKEN_EXPIRES=900
JWT_REFRESH_TOKEN_EXPIRES=604800

# ============================================
# MFA CONFIGURATION
# ============================================
MFA_ISSUER=HealthFlow
MFA_TOKEN_VALIDITY=30

# ============================================
# HIPAA CONFIGURATION
# ============================================
HIPAA_AUDIT_ENABLED=true
HIPAA_ENCRYPTION_ENABLED=true

# ============================================
# FILE UPLOAD
# ============================================
MAX_FILE_SIZE=16777216
UPLOAD_FOLDER=/tmp/uploads

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_WINDOW=900
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# MONITORING
# ============================================
LOG_LEVEL=INFO
ENABLE_METRICS=true


# Regulatory Service
REGULATORY_SERVICE_URL=http://localhost:4005
