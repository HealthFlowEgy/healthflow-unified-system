// Sprint 3 - Mobile App Package Configuration

{
  "name": "healthflow-mobile",
  "version": "1.0.0",
  "description": "HealthFlow Mobile App - Doctors, Pharmacies, and Patients",
  "main": "index.js",
  "scripts": {
    "start": "react-native start",
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "test": "jest",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "type-check": "tsc --noEmit",
    "clean": "react-native-clean-project",
    "pod-install": "cd ios && pod install && cd ..",
    "build:android": "cd android && ./gradlew assembleRelease",
    "build:ios": "cd ios && xcodebuild -workspace HealthFlow.xcworkspace -scheme HealthFlow -configuration Release"
  },
