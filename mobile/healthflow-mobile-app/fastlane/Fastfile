# Sprint 3 - Fastlane Configuration for iOS & Android
# ------------------------------------------------------------------------------

default_platform(:ios)

platform :ios do
  desc "Build iOS app for development"
  lane :dev do
    increment_build_number(xcodeproj: "ios/HealthFlow.xcodeproj")
    build_app(
      scheme: "HealthFlow",
      workspace: "ios/HealthFlow.xcworkspace",
      configuration: "Debug",
      export_method: "development"
    )
  end

  desc "Build and upload iOS app to TestFlight"
  lane :beta do
    increment_build_number(xcodeproj: "ios/HealthFlow.xcodeproj")
    build_app(
      scheme: "HealthFlow",
      workspace: "ios/HealthFlow.xcworkspace",
      configuration: "Release",
      export_method: "app-store"
    )
    upload_to_testflight(
      skip_waiting_for_build_processing: true
    )
  end

  desc "Deploy iOS app to App Store"
  lane :release do
    increment_build_number(xcodeproj: "ios/HealthFlow.xcodeproj")
    build_app(
      scheme: "HealthFlow",
      workspace: "ios/HealthFlow.xcworkspace",
      configuration: "Release",
      export_method: "app-store"
    )
    upload_to_app_store(
      skip_screenshots: true,
      skip_metadata: true,
      submit_for_review: false
    )
  end
end

platform :android do
  desc "Build Android app for development"
  lane :dev do
    gradle(
      task: "assemble",
      build_type: "Debug",
      project_dir: "android/"
    )
  end

  desc "Build and upload Android app to Play Store Beta"
  lane :beta do
    gradle(
      task: "bundle",
      build_type: "Release",
      project_dir: "android/"
    )
    upload_to_play_store(
      track: "beta",
      skip_upload_apk: true,
      skip_upload_metadata: true,
      skip_upload_images: true,
      skip_upload_screenshots: true
    )
  end

  desc "Deploy Android app to Play Store"
  lane :release do
    gradle(
      task: "bundle",
      build_type: "Release",
      project_dir: "android/"
    )
    upload_to_play_store(
      track: "production",
      skip_upload_apk: true,
      skip_upload_metadata: true,
      skip_upload_images: true,
      skip_upload_screenshots: true
    )
  end
end

# ------------------------------------------------------------------------------